<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pilih_pelanggan_MainActivity2">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewPelanggan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:queryHint="Cari Data Pelanggan"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvPilihPelangganKosong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Pelanggan Kosong"
        android:visibility="gone"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/searchViewPelanggan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pilih_data_layanan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/card_pilih_pelanggan"
        app:layout_constraintTop_toBottomOf="@id/tvPilihPelangganKosong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
