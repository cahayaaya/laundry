<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCard_LayananTambahan"
    android:padding="16dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/pink">

            <TextView
                android:id="@+id/tvCardIdLayananTambahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="4dp"
                android:text="ID Layanan"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/lvCardLayananTambahan"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvNamaLayananTambahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:text="@string/card_layanan_nama"
                android:textColor="@color/text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvHargaLayananTambahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/text"
                android:text="@string/card_layanan_harga"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

