<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCard_DataTambahan"
    android:padding="16dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="#DEB3B3">

            <TextView
                android:id="@+id/tvCardIdTambahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="4dp"
                android:text="ID Tambahan"
                android:textSize="16sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/lvCardTambahan"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="#E0C4C4"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvNamaTambahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:text="Nama"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvHargaTambahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Harga"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCabangTambahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Cabang"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

